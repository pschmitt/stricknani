# Stricknani Configuration

# Application
SECRET_KEY=change-me-in-production
# Optional (auto-generated if unset)
CSRF_SECRET_KEY=change-me-in-production
PORT=7674
DEBUG=false
AUTO_RELOAD=false
TESTING=false
BIND_HOST=127.0.0.1
BIND_PORT=7674

# Database
DATABASE_URL=sqlite:///./stricknani.db

# Media Storage
MEDIA_ROOT=./media

# Import Trace
IMPORT_TRACE_ENABLED=false
IMPORT_TRACE_DIR=./media/import-traces
IMPORT_TRACE_MAX_CHARS=12000

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_COOKIE_SECURE=false
LANGUAGE_COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Features
FEATURE_SIGNUP_ENABLED=false
FEATURE_WAYBACK_ENABLED=false
FEATURE_AI_IMPORT_ENABLED=true

# Internationalization
DEFAULT_LANGUAGE=de

# AI (OpenAI-compatible providers: openai, openrouter, groq)
AI_PROVIDER=openai
AI_API_KEY=
AI_BASE_URL=
AI_MODEL=
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GROQ_API_KEY=

# Sentry
SENTRY_DSN_BACKEND=
SENTRY_DSN_FRONTEND=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0
SENTRY_FRONTEND_TRACES_SAMPLE_RATE=0

# Logging
LOG_LEVEL=
IMPORT_LOG_PATH=

# Initial admin bootstrap
INITIAL_ADMIN_EMAIL=
INITIAL_ADMIN_USERNAME=
INITIAL_ADMIN_PASSWORD=
